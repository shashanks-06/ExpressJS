each post in posts
    .post-card 
        h2=post.title 
        h3="by "+ post.author 
        p=post.content
        form(method="post" action="/admin/approve") 
            input(type="hidden" name="postId" value=post.id)
            button.adminBtn(value="approve") Approve 
            button.adminBtn(value="decline") Decline 
